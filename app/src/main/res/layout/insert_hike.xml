<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/hike_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:text="Add hike"
            android:textColor="@color/colorBlue"
            android:textSize="28sp"  />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike name"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Hike name"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike location"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtLocation"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:gravity="top"

            android:hint="Location"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnLocation"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/teal_700"
            android:text="Location picking"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Date"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>


        <Button
            android:id="@+id/btnDatePicker"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/teal_700"
            android:text="Date picking"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Parking availability"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <RadioGroup
            android:id="@+id/rgrpParking"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center">

            <!--adding a radio button -->

            <!--adding a radio button -->

            <RadioButton
                android:id="@+id/rbtnYes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:padding="4dp"
                android:text="Yes"
                android:textAlignment="center"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbtnNo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                android:padding="4dp"
                android:text="No"
                android:textAlignment="center"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike distance"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtLength"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Distance"

            android:inputType="number"
            android:lines="4"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike level"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtLevel"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Level"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike description"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike image"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <ImageView
            android:id="@+id/imgHike"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_image" />

        <!--  -->

        <!--    <ImageView-->
        <!--        android:id="@+id/image_select"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        tools:srcCompat="@tools:sample/avatars" />-->

        <!--    <Button-->
        <!--        android:id="@+id/button"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Select image" />-->

    </LinearLayout>

</ScrollView>