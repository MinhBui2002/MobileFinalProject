<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:importantForContentCapture="no"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/popupTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="Add observation"
        android:textColor="@color/colorBlue"
        android:textSize="28sp" />


    <EditText
        android:id="@+id/detailObsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_style"
        android:ems="10"

        android:fontFamily="@font/poppins_medium"
        android:hint="Observation name"
        android:padding="10dp"
        android:textSize="24sp" />

    <TextView

        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Observation time"
        android:textColor="#000000"

        android:textSize="24sp" />

    <Button
        android:id="@+id/detailObsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounder_button"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="Time picker"

        android:textColor="@color/white"
        android:textSize="24dp"
        app:cornerRadius="@dimen/material_emphasis_medium" />

    <EditText
        android:id="@+id/detailObsComment"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_style"
        android:ems="10"

        android:fontFamily="@font/poppins_medium"
        android:hint="Observation comment"
        android:padding="10dp"
        android:textSize="24sp" />

</LinearLayout>